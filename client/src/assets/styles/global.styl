html, body{
  margin 0
  padding 0
  width 100%
  height 100%
}
body{
  // display: flex; // 用这行来实验post添加前缀是否成功
}

* {
  box-sizing: border-box
}

.fade-enter-active, .fade-leave-active
  transition: opacity .5s
.fade-enter, .fade-leave-to
  opacity: 0

#app{
    height:100%;
  }
.g-content-box {
  width: 100%;
  min-height: 680px;
  padding: 20px;
  background: #fff;
  box-shadow: 0 4px 10px 0 rgba(206,215,235,.41);
}
.g-page-title{
  font-family: 'PingFangSC-Medium';
  font-size: 20px;
  color: #515151;
  margin-bottom: 25px;
  }
.g-form {
  margin-bottom:10px;
}

.g-form .el-input--suffix .el-input__inner{
  height:36px;
  width:140px;
}
.g-form .el-date-editor.el-input, .el-date-editor.el-input__inner{
  width:140px;
}
.g-red {
  color:#EB5858;
}
.el-button {
  padding:10px 20px;
}
.g-form .el-button--primary {
  padding:10px 20px;
}
.g-yes-color {
  color:#08A266 ;
}
.g-no-color {
  color:#E73F55 ;
}
.g-success {
  background: #459CE1;
  border-radius: 60px ;
  padding: 7px 14px;
  border:none ;
}
.g-delete {
  background: #E73F55;
  border-radius: 60px;
  padding:7px 20px;
  border:none;
}
.g-success:focus, .g-success:hover {
  background: #459CE9;
}
.g-table-style {
  margin-bottom:50px;
}
.g-page {
  height:30px;
  line-height:30px;
  text-align: right;
  margin-bottom:60px;
}
.el-pagination.is-background .el-pager li:not(.disabled).active{
  border:none;
  background-image: linear-gradient(-180deg, #A1DCFF 0%, #449CE1 97%);
}
.el-pagination.is-background .btn-next, .el-pagination.is-background .btn-prev, .el-pagination.is-background .el-pager li {
  border: 1px solid #DBDBDB;
  border-radius: 4px;
  background:#fff;
}
.el-pagination.is-background .btn-next, .el-pagination.is-background .btn-prev{
  width:80px;
  border: 1px solid #CECECE;
  border-radius: 60px;
}
.el-pager li {
  height:30px;
  line-height: 30px;
}
.el-input--mini .el-input__inner {
  height:30px;
  line-height:30px;
}
.el-pagination button, .el-pagination span:not([class*=suffix]) {
  height:30px;
  line-height: 30px;
}
.el-pagination__editor.el-input .el-input__inner {
  height:30px;
  line-height:30px;
}

